# Environment Configuration for Union Registry
# Kashmir Valley Tank Owners & Petroleum Dealers Association
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql://username:password@hostname:port/database

# Development/Production Environment
NODE_ENV=development

# API Keys (Optional - for enhanced features)
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Session Secret (for secure session management)
SESSION_SECRET=your_secure_session_secret_here

# Authentication Configuration
ADMIN_USERNAME=admin
ADMIN_PASSWORD_HASH=your_bcrypt_hashed_admin_password

# Database Pool Configuration
DB_POOL_MAX=20
DB_POOL_MIN=5

# Application Configuration
APP_NAME=Union Registry
APP_VERSION=1.0.0
APP_URL=http://localhost:5000

# Security Configuration
JWT_SECRET=your_jwt_secret_key
BCRYPT_ROUNDS=12

# Fuel Price API Configuration (if using external APIs)
FUEL_PRICE_API_KEY=your_fuel_price_api_key
FUEL_PRICE_API_URL=https://api.fuelprices.com/v1

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:5000,https://yourdomain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=info